{
  "name": "@fjell/common-config",
  "version": "1.1.29",
  "description": "Shared ESLint, Typescript and other configuration for all Fjell projects",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./library": "./library.js",
    "./app": "./app.js",
    "./esbuild": "./esbuild.js",
    "./esbuild/library": "./esbuild-library.js",
    "./esbuild/react": "./esbuild-react.js",
    "./esbuild/cli": "./esbuild-cli.js",
    "./esbuild/multi-file": "./esbuild-multi-file.js"
  },
  "keywords": [
    "eslint",
    "esbuild",
    "config",
    "fjell",
    "typescript"
  ],
  "author": "Fjell Team",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .js --fix",
    "clean": "rm -rf dist",
    "build": "echo 'No build required for config files'",
    "test": "echo 'No tests required for config files'",
    "precommit": "npm run clean && npm run lint && npm run build && npm run test",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "esbuild": "0.25.11"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "index.js",
    "library.js",
    "app.js",
    "esbuild.js",
    "esbuild-library.js",
    "esbuild-react.js",
    "esbuild-cli.js",
    "esbuild-multi-file.js",
    "eslint.config.mjs",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getfjell/common-config.git"
  }
}
